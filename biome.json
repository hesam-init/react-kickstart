{
	"$schema": "https://biomejs.dev/schemas/1.9.2/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			"node_modules/**",
			"src/routeTree.gen.ts",
			"src/routes.tsx"
		]
	},
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"ignore": [
			"node_modules/**"
		],
		"indentWidth": 4,
		"lineEnding": "lf",
		"indentStyle": "tab"
	},
	"javascript": {
		"formatter": {
			"jsxQuoteStyle": "double",
			"quoteProperties": "asNeeded",
			"semicolons": "always",
			"arrowParentheses": "always",
			"bracketSpacing": true,
			"bracketSameLine": false,
			"quoteStyle": "double",
			"attributePosition": "auto",
			"trailingCommas": "es5"
		}
	},
	"linter": {
		"enabled": true,
		"ignore": [
			"node_modules/**",
			"vite.config.ts"
		],
		"rules": {
			"recommended": true,
			"a11y": {
				"useAltText": "error",
				"useButtonType": "error"
			},
			"nursery": {
				"useSortedClasses": {
					"level": "off",
					"options": {
						"attributes": [
							"classList"
						],
						"functions": [
							"clsx",
							"cva",
							"tw"
						]
					}
				}
			},
			"correctness": {
				"noSelfAssign": "error",
				"noUnusedImports": "error",
				"noUnusedVariables": "error",
				"noEmptyPattern": "off"
			},
			"complexity": {
				"noUselessTernary": "error"
			},
			"suspicious": {
				"noEmptyInterface": "off"
			},
			"style": {
				"useConst": "error",
				"noVar": "error",
				"useEnumInitializers": "error"
			}
		}
	}
}